<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">

                    <!-- form card login -->
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0">Login</h3>
                        </div>
                        <div class="card-body">

                            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form", id: "formLogin", role: "form", autocomplete: "off"}) do |f| %>
                                <div class="form-group">
                                    <%= f.label :login %><br />
                                        <%= f.text_field :login, autofocus: true, autocomplete: "off", class: "form-control form-control-lg rounded-0", placeholder: 'Enter your email/username' %>
                                </div>

                                <div class="form-group">
                                    <%= f.label :password %><br />
                                        <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-lg rounded-0", placeholder: 'Enter your password' %>
                                </div>

                                <% if devise_mapping.rememberable? -%>
                                    <div class="field">
                                        <%= f.check_box :remember_me %>
                                            <%= f.label :remember_me %>
                                    </div>
                                    <% end -%>

                                        <div>
                                            <%= f.submit "Log in", class: "btn btn-success btn-lg float-right"%>
                                        </div>
                                        <% end %>

                                            <%= render "devise/shared/links" %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
