<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <!-- form card login -->
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0">Sign up</h3>
                        </div>
                        <div class="card-body">
                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, class: "form", id: "formLogin", role: "form", autocomplete: "off"}) do |f| %>
                            <%= devise_error_messages! %>
                            <div class="form-group">
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control rounded-0", placeholder: 'Enter your email'  %>
                            </div>
                            <div class="form-group">
                                <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control form-control rounded-0", placeholder: 'Username'  %>
                            </div>
                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col">
                                        <%= f.text_field :first_name, autofocus: true, autocomplete: "email", class: "form-control rounded-0", placeholder: 'First name'  %>
                                    </div>
                                    <div class="col">
                                        <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class: "form-control rounded-0", placeholder: 'Last name'  %>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col">
                                        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control rounded-0", placeholder: 'Enter password' %>
                                    </div>
                                    <div class="col">
                                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control rounded-0", placeholder: 'Confirm password' %>
                                    </div>
                                </div>
                            </div>
                            <<div class="form-group">
                              <%= f.file_field :avatar %><%= f.hidden_field :avatar_cache %>
                            </div>
                            <div class="text-center">
                                <%= f.submit "Sign up", class: "btn btn-success btn-lg"%>
                            </div>
                            <% end %>
                            <%= render "devise/shared/links" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
